<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HubXRecruitmentCase" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/light_green</item>
    </style>

    <style name="Theme.HubXRecruitmentCase" parent="Base.Theme.HubXRecruitmentCase" />

    <style name="OnboardingPrimaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_onboarding_main</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OnboardingTermsTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/pastel_green</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="LightTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/rubik_light</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_24ssp</item>
    </style>

    <style name="RegularTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:letterSpacing">-0.005</item>
    </style>

    <style name="MediumTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_21ssp</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="SemiBoldTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/rubik_semibold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_24ssp</item>
    </style>

    <style name="BoldTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/rubik_extrabold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_21ssp</item>
    </style>

    <style name="ExtraBoldTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/visby_extrabold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    <style name="RegularDescriptionTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="Floating" parent="Widget.Design.FloatingActionButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="fabCradleRoundedCornerRadius">100dp</item>
        <item name="android:radius">10dp</item>
        <item name="fabSize">normal</item>
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/green</item>
        <item name="srcCompat">@drawable/ic_scanner</item>
    </style>

</resources>