<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_onboarding_items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="24dp"
        android:textColor="@color/gray"
        android:textSize="24sp"
        android:fontFamily="@font/rubik_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Take a photo to"/>

    <TextView
        android:id="@+id/tv_highlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/rubik_extrabold"
        android:textColor="@color/gray"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/tv_main"
        app:layout_constraintTop_toTopOf="@+id/tv_main"
        app:layout_constraintVertical_bias="0.0"
        tools:text="identify" />

    <ImageView
        android:id="@+id/underline_curve"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/brush_underline_effect"
        android:src="@drawable/img_brush"
        app:layout_constraintStart_toStartOf="@id/tv_highlight"
        app:layout_constraintTop_toTopOf="@id/tv_highlight"
        app:layout_constraintEnd_toEndOf="@id/tv_highlight" />

    <TextView
        android:id="@+id/tv_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="24sp"
        android:fontFamily="@font/sf_pro_display_bold"
        app:layout_constraintStart_toStartOf="@id/tv_main"
        app:layout_constraintTop_toBottomOf="@id/tv_main"
        tools:text="the plant!"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:textColor="@color/dark_green"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tv_subtext"
        app:layout_constraintEnd_toEndOf="@id/tv_highlight"
        app:layout_constraintTop_toBottomOf="@id/tv_subtext"
        tools:text="@string/onboarding_first_page_desc"/>

</androidx.constraintlayout.widget.ConstraintLayout>